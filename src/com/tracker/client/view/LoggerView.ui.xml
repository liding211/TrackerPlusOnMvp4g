<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.tracker.client.view"
             xmlns:b2="urn:import:com.github.gwtbootstrap.datetimepicker.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <g:HTMLPanel>
        <g:HTMLPanel>
            <div class="tab-container" id="tracker-container">
                <b:Well>
                    <b:Form type="HORIZONTAL">
                        <b:Fieldset>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <b:ControlGroup>
                                        <b:ControlLabel>Time Tracker</b:ControlLabel>
                                        <b:Controls>
                                            <g:HTMLPanel>
                                                <g:SubmitButton ui:field="addTimeLog" addStyleNames="btn">Add Time Log</g:SubmitButton>
                                                <g:Anchor ui:field="reset">Reset</g:Anchor>
                                            </g:HTMLPanel>
                                        </b:Controls>
                                    </b:ControlGroup>
                                </b:Column>
                            </b:FluidRow>
                            <b:FluidRow>
                                <g:HTMLPanel>
                                    <form id="tracker-form" name="tracker-form">
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b2:DateTimeBoxAppended
                                                    ui:field="startDateTime"
                                                    alternateSize="MEDIUM"
                                                    autoClose="true"
                                                    icon="CALENDAR"
                                                    alignment="CENTER"/>
                                                <g:HTMLPanel>
                                                    <span class="help-block hidden"></span>
                                                </g:HTMLPanel>
                                            </g:HTMLPanel>
                                        </b:Column>
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b:TextBox ui:field="title"/>
                                                <span class="help-block hidden"></span>
                                            </g:HTMLPanel>
                                        </b:Column>
                                        <b:Column size="3">
                                            <c:LoggerTimerView ui:field="timer"/>
                                        </b:Column>
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b:TextArea ui:field="description"/>
                                                <span class="help-block hidden"></span>
                                            </g:HTMLPanel>
                                        </b:Column>
                                    </form>
                                </g:HTMLPanel>
                            </b:FluidRow>
                        </b:Fieldset>
                    </b:Form>
                </b:Well>
                <div>
                    <h3>Time Log</h3>
                    <table class="time-log-table">
                        <thead id="log-list-header">
                            <tr>
                                <th class="th-start-time" data-sort="startTime">Start time<span class="sort-type"></span></th>
                                <th class="th-title" data-sort="title">Name<span class="sort-type"></span></th>
                                <th class="th-duration" data-sort="duration">Time spent<span class="sort-type"></span></th>
                                <th class="th-description">Description</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody id="list-of-tracker-logs"></tbody>
                        <tfoot>
                            <tr>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>