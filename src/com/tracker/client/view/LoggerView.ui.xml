<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:b2="urn:import:com.github.gwtbootstrap.datetimepicker.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <g:HTMLPanel>
        <g:HTMLPanel>
            <div class="tab-container" id="tracker-container">
                <b:Well>
                    <b:Form type="HORIZONTAL" ui:field="logForm">
                        <b:Fieldset>
                            <b:FluidRow>
                                <b:Column size="12">
                                    <b:ControlGroup>
                                        <b:ControlLabel>Time Tracker</b:ControlLabel>
                                        <b:Controls>
                                            <g:HTMLPanel>
                                                <g:SubmitButton ui:field="addTimeLog" addStyleNames="btn">Add Time Log</g:SubmitButton>
                                                <g:Anchor ui:field="reset">Reset</g:Anchor>
                                            </g:HTMLPanel>
                                        </b:Controls>
                                    </b:ControlGroup>
                                </b:Column>
                            </b:FluidRow>
                            <b:FluidRow>
                                <g:HTMLPanel>
                                    <form id="tracker-form" name="tracker-form">
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b2:DateTimeBoxAppended
                                                    ui:field="startDateTime"
                                                    alternateSize="MEDIUM"
                                                    autoClose="true"
                                                    icon="CALENDAR"
                                                    alignment="CENTER"/>
                                                <b:HelpBlock>HelpInBlock</b:HelpBlock>
                                            </g:HTMLPanel>
                                        </b:Column>
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b:TextBox ui:field="title"/>
                                                <b:HelpBlock>HelpInBlock</b:HelpBlock>
                                            </g:HTMLPanel>
                                        </b:Column>
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b:AppendButton ui:field="timerStartPanel">
                                                    <b2:DateTimeBox ui:field="timer" format="HH:ii:ss" alternateSize="SMALL" alignment="CENTER" />
                                                    <b:Button ui:field="startTimer" icon="PLAY" />
                                                </b:AppendButton>
                                                <g:HTMLPanel ui:field="timerControlPanel" >
                                                    <b:Button ui:field="pauseTimer" icon="PAUSE" />
                                                    <b:TextBox ui:field="timerText" alternateSize="SMALL" alignment="CENTER" enabled="false"/>
                                                    <b:Button ui:field="stopTimer" icon="STOP" />
                                                </g:HTMLPanel>
                                                <b:HelpBlock>HelpInBlock</b:HelpBlock>
                                            </g:HTMLPanel>
                                        </b:Column>
                                        <b:Column size="3">
                                            <g:HTMLPanel>
                                                <b:TextArea ui:field="description"/>
                                                <span class="help-block hidden"></span>
                                            </g:HTMLPanel>
                                        </b:Column>
                                    </form>
                                </g:HTMLPanel>
                            </b:FluidRow>
                        </b:Fieldset>
                    </b:Form>
                </b:Well>
                <div>
                    <h3>Time Log</h3>
