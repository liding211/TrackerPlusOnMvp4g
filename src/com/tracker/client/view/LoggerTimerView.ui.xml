<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:HTMLPanel>
        <g:HTMLPanel ui:field="timerStartPanel" >
            <input type='text' class="form-control" name="duration" id="duration" placeholder="Time spent (hh:mm:ss)" />
            <g:Anchor ui:field="startTimer" styleName="input-group-addon">
                <span class="glyphicon glyphicon-play" id="tracker-start-icon"></span>
            </g:Anchor>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="timerControlPanel">
            <g:Anchor ui:field="pauseTimer" styleName="input-group-addon">
                <span ui:field="pauseButtonIcon" class="glyphicon glyphicon-pause"></span>
            </g:Anchor>
            <g:Label ui:field="timerText" styleName="form-control" />
            <g:Anchor ui:field="stopTimer" styleName="input-group-addon">
                <span class="glyphicon glyphicon-stop"></span>
            </g:Anchor>
        </g:HTMLPanel>
        <span class="help-block hidden"></span>
    </g:HTMLPanel>
</ui:UiBinder>