<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <g:HTMLPanel>
        <g:HTMLPanel>
            <div class="tab-container" id="analytics-container">
                <b:FluidRow>
                    <b:Column size="10">
                        <g:HTMLPanel>
                            <b:Heading size="3">Time Aggregation</b:Heading>
                        </g:HTMLPanel>
                    </b:Column>
                    <b:Column size="2">
                        <g:HTMLPanel>
                            <b:NavPills>
                                <b:NavLink ui:field='tableIconPlaceholder' />
                                <b:NavLink ui:field='graphIconPlaceholder' />
                            </b:NavPills>
                        </g:HTMLPanel>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="8">
                        <g:HTMLPanel>
                            Period:
                            <b:NavPills>
                                <b:NavLink ui:field="periodDay">7 days</b:NavLink>
                                <b:NavLink ui:field="periodMonth">Month</b:NavLink>
                                <b:NavLink ui:field="periodThreeMonths">3 Months</b:NavLink>
                            </b:NavPills>
                        </g:HTMLPanel>
                    </b:Column>
                    <b:Column size="4">
                        <g:HTMLPanel>
                            Group by:
                            <b:NavPills>
                                <b:NavLink ui:field="groupByDay">Day</b:NavLink>
                                <b:NavLink ui:field="groupByWeek">Week</b:NavLink>
                            </b:NavPills>
                        </g:HTMLPanel>
                    </b:Column>
                </b:FluidRow>
                <b:FluidRow>
                    <b:Column size="12">
                        <g:HTMLPanel ui:field="DataPlaceHolder"/>
                    </b:Column>
                </b:FluidRow>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>